<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    android:background="@color/Jambu"
    tools:context=".MainActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="CINEMA HAPPY"
    android:textStyle="bold"
    android:layout_marginTop="20dp"
    android:textAlignment="center"
    android:layout_gravity="center"
    android:textSize="25sp"
    android:textColor="@color/maroon"
    android:layout_marginBottom="20dp"></TextView>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:src="@drawable/novel"
        android:layout_marginBottom="10dp"/>

    <EditText
        android:id="@+id/edTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"></EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="Watch for"
        android:layout_marginBottom="10dp">
    </TextView>

    <RadioGroup
        android:id="@+id/Grup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp">
        <RadioButton
            android:id="@+id/Adult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adult(17+)"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"/>
    <RadioButton
        android:id="@+id/Kids"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kids"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        />
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Genre"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp">
        <CheckBox
            android:id="@+id/cbt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Thriller"
            android:layout_marginBottom="10dp">
        </CheckBox>
        <CheckBox
            android:id="@+id/cbh"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Horor"
            android:layout_marginBottom="10dp">
        </CheckBox>
        <CheckBox
            android:id="@+id/cba"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Action"
            android:layout_marginBottom="10dp">
        </CheckBox>
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp">
            <CheckBox
                android:id="@+id/cbr"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Romance"
                android:layout_marginBottom="10dp">
            </CheckBox>
            <CheckBox
                android:id="@+id/cbc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Comedy"
                android:layout_marginBottom="10dp">
            </CheckBox>
            <CheckBox
                android:id="@+id/cbf"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Fantasy"
                android:layout_marginBottom="10dp">
            </CheckBox>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="4dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Duration (Hour)">
        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration Minutes">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp">

        <Spinner
            android:id="@+id/spinnertahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/spinnertahun">
        </Spinner>
        <Spinner
            android:id="@+id/spinnerjam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/spinnerjam">
        </Spinner>
        <Spinner
            android:id="@+id/spinnermenit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/spinnermenit">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
    <Button
        android:id="@+id/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:text="Simpan"/>
    </LinearLayout>
</LinearLayout>