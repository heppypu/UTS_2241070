<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Toko Happy"
       android:textStyle="bold"
       android:layout_marginTop="20dp"
       android:textSize="35sp"
       android:textAlignment="center"
       android:textColor="@color/maroon"
       android:layout_marginBottom="20dp"
       />

   <ImageView
       android:id="@+id/image"
       android:layout_width="200dp"
       android:layout_height="150dp"
       android:layout_gravity="center"
       android:src="@drawable/cushion"
       android:layout_marginBottom="20dp"

       ></ImageView>

   <EditText
       android:id="@+id/namaPembeli"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:hint="Nama Pembeli"
       android:layout_marginBottom="20dp"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="10dp"
       />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Pilihan Layanan"
       android:textColor="@color/black"
       android:layout_marginStart="10dp"/>
   <RadioGroup
       android:id="@+id/grup"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginBottom="20dp"
       android:layout_marginStart="10dp">
      <RadioButton
          android:id="@+id/cash"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Cash"
          android:textAlignment="center"/>
      <RadioButton
          android:id="@+id/Transfer"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="QRIS/Transfer"
          android:textAlignment="center"/>
   </RadioGroup>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:layout_marginBottom="10dp"
       android:text="Menu Tersedia :"
       android:textColor="@color/black">
   </TextView>

   <Spinner
       android:id="@+id/spinnerMenu"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
       android:layout_marginBottom="30dp"
       android:entries="@array/spinnerMenuArray">
   </Spinner>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Pilih Promo"
       android:layout_marginStart="10dp"
       android:layout_marginBottom="10dp"
       ></TextView>

   <CheckBox
       android:id="@+id/checkbox"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Diskon 5%"
       android:layout_marginStart="10dp"
       ></CheckBox>
   <CheckBox
       android:layout_marginStart="10dp"
       android:id="@+id/checkbox1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Diskon 10 %"
       ></CheckBox>

   <Button
       android:id="@+id/btn"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Simpan Pesan"
       android:layout_gravity="center"
      ></Button>
</LinearLayout>